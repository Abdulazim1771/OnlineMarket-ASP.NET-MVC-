<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OnlineMarket_ASP.NET_</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OnlineMarket_ASP.NET_.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&display=swap">
    <link rel="stylesheet" href="~/font-awesome/css/all.css">
    <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/20.1.55/bootstrap5.css" />
    <script src="https://cdn.syncfusion.com/ej2/26.2.14/dist/ej2.min.js"></script>
</head>

@{
    var data = new string[] { "Badminton", "Basketball", "Cricket", "Football", "Golf", "Gymnastics", "Hockey", "Tennis" };
}

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black border-bottom box-shadow mb-3" style="height:70px">
            <div class="container-fluid">
                @*<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">OnlineMarket_ASP.NET_</a> 
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span> 
                </button> *@
                <div class="navbar-collapse d-flex align-items-center mt-2 mb-1 collapse d-sm-inline-flex justify-content-between gap-4">
                    <ul class="navbar-nav flex-grow-1 mt-2">
                        <li class="nav-item mt-2">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">
                                <img src="/main-logo.jpg" style="width:100px"/>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <div class="d-flex align-items-center gap-1">
                                    <i class="fas fa-map-marker-alt"></i>
                                        <p>Deliver to <br /> <span style="font-weight:bold;">Uzbekistan</span></p>
                                </div>
                            </a>
                        </li>
                    </ul>
                    <div class="search-bar m-lg-0 m-md-0" style="width:62%; height:40px">
                        <ejs-dropdownlist id="games" width="80px" dataSource="data" popupWidth="300px" placeholder="All" popupHeight="220px">
                        </ejs-dropdownlist>
                        <form class="search-bar">
                            <input type="text" name="searchText" asp-controller="Products" asp-action="Index" value="@ViewBag.SearchText" placeholder="Search here...">
                            <button><i class="fas fa-search"></i></button>
                        </form>
                    </div>
                    <ul class="navbar-nav flex-grow-1 mt-2">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">
                                  <p>Hello, sign in <br /> <span style="font-weight:bold;">Account & List</span></p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <p>Returns <br /> <span style="font-weight:bold;">& Orders</span></p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <div class="d-flex align-items-center mt-2 gap-2">
                                    <i class="fa-solid fa-cart-shopping mb-1"></i>
                                    <p class="mt-3" style="font-weight:bold">Cart</p>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - OnlineMarket_ASP.NET_ - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <ejs-scripts></ejs-scripts>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

